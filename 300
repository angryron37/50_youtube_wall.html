<h2>300 YouTube Video Wall (Ultra Low Quality â€“ Auto Mute + Autoplay)</h2>
<p>Paste any normal YouTube link:</p>

<input type="text" id="ytURL" placeholder="https://www.youtube.com/watch?v=###########">
<button onclick="loadVideos()">Load Video</button>

<div id="grid"></div>

<script>
function convertToEmbed(url) {
    try {
        let videoID = "";

        if (url.includes("watch?v=")) {
            videoID = url.split("watch?v=")[1].split("&")[0];
        } else if (url.includes("youtu.be/")) {
            videoID = url.split("youtu.be/")[1].split("?")[0];
        } else {
            return null;
        }

        return `https://www.youtube.com/embed/${videoID}?autoplay=1&mute=1&controls=0&loop=1&playlist=${videoID}&vq=tiny`;
    } catch {
        return null;
    }
}

function loadVideos() {
    const inputURL = document.getElementById("ytURL").value.trim();
    const embed = convertToEmbed(inputURL);

    if (!embed) {
        alert("Invalid YouTube URL!");
        return;
    }

    const grid = document.getElementById("grid");
    grid.innerHTML = "";

    for (let i = 0; i < 300; i++) {
        const iframe = document.createElement("iframe");
        iframe.src = embed;
        iframe.allow = "autoplay; encrypted-media";
        grid.appendChild(iframe);
    }
}
</script>

